<table >
<% var i; for (i=0; i < materias.length; i ++) { %>
	<tr>
		<td align="left">
			<%= (i+1)+".  "%><a href="materias/<%= materias[i].id %>"><%=  materias[i].materia %></a>
			
		</td>
		
		<%if(session.user) {%>
			<td>
				<a href="materias/<%= materias[i].id %>/edit"><button>editar</button></a>
			</td>
			<td>
				<form method="post" action="materias/<%= materias[i].id %>?_method=delete">
					<button type="submit" onClick="return confirm('Borrar: <% materias[i].pregunta %>');">
						borrar
					</button>
				</form>
			</td>
		<%}%>
	</tr>
<% } %>
</table>
<p>
	<%if(session.user) {%>
		<a href="/materias/new"><button type="button">Insertar Materia</button></a>
	<%}%>
</p>
